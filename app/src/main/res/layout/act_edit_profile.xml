<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/back"
    tools:context=".act_Edit_Profile">

    <TextView
        android:id="@+id/tv_act_edit_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بيانات الحساب"
        android:textSize="28dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_ed_pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الإسم الكامل"
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_act_edit_profile_title"
        android:layout_marginTop="140dp"/>

    <EditText
        android:id="@+id/ed_edit_pro_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:singleLine="true"
        android:hint="الإسم"
        android:background="@drawable/ed_back"
        app:layout_constraintTop_toBottomOf="@id/tv_ed_pro_name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_ed_pro_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="رقم الهاتف"
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_edit_pro_name"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/ed_edit_pro_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:singleLine="true"
        android:numeric="integer"
        android:hint="الرقم"
        android:background="@drawable/ed_back"
        app:layout_constraintTop_toBottomOf="@id/tv_ed_pro_phone"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bt_edit_pro_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="حفظ"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>