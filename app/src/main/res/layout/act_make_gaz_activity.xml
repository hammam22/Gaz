<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/back"
    tools:context=".act_make_gaz_activity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_back"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_makeNew_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="اسم الاسطوانة"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_makeNew_dis"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="تفاصيل عن نوعية الاسطوانة المعروضة"
                android:textSize="22dp" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_gazFornewAct"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/cy_blue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سعر الواحدة"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/ed_makeNew_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ed_back"
            android:numeric="integer"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكمية المتوفرة"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/ed_makeNew_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ed_back"
            android:numeric="integer"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المكان والزمان"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/ed_makeNew_timePlace"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ed_back"
            android:maxLines="2"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bt_makeNew_doit"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ملاحظات أخرى"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/ed_makeNew_notes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ed_back"
            android:padding="8dp"
            android:singleLine="true" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_makeNew_doit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="بدء النشاط"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>