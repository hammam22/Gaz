<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/act_item_lay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_gzaItem"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gazNameItem"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="نموذج الاسم"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/iv_gzaItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_shohna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="كامل الشحنة"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tv_gazNameItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gazAmountItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_shohna"
        app:layout_constraintStart_toEndOf="@+id/tv_gazNameItem"
        app:layout_constraintTop_toBottomOf="@+id/tv_shohna" />

    <TextView
        android:id="@+id/tv_availableItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="غير متوفر"
        android:textColor="@color/orange700"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gazAmountItem"
        app:layout_constraintStart_toEndOf="@+id/tv_shohna"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_gazGetItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="حجز"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_availableItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="إنتهى التسليم"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gazNameItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>